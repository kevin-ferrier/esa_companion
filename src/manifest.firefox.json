{
  "manifest_version": 2,
  "name": "ESAMarathon Summer 2022 companion",
  "description": "Track the schedule of ESAMarathon summer 2022",
  "version": "1.1.1",
  "background": {
    "scripts": ["/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "esa16.png",
      "32": "esa32.png",
      "48": "esa48.png",
      "128": "esa128.png",
      "256": "esa256.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@esamarathon.com",
      "strict_min_version": "48.0"
    }
  },
  "permissions": ["alarms", "notifications", "storage", "tabs"]
}
